{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://extrabold.tools/schemas/dist-index.schema.json",
    "title": "Dist index (lightweight)",
    "description": "Minimal index mapping IDs to basic info and file paths.",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "version",
        "items"
    ],
    "properties": {
        "version": {
            "type": "string",
            "minLength": 1,
            "maxLength": 40
        },
        "generated_at": {
            "type": "string",
            "format": "date-time"
        },
        "items": {
            "type": "array",
            "description": "Flat list of available items.",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "id",
                    "type",
                    "name",
                    "brand",
                    "path"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "brand": {
                        "type": "string"
                    },
                    "path": {
                        "type": "string",
                        "description": "Relative path to the full item JSON in dist/items/"
                    },
                    "visibility": {
                        "anyOf": [
                            {
                                "type": "null"
                            },
                            {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                },
                                "uniqueItems": true
                            }
                        ]
                    },
                    "image": {
                        "anyOf": [
                            {
                                "type": "string",
                                "format": "uri"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "description": "URL to the primary image for this item."
                    }
                }
            }
        }
    }
}