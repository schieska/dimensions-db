{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://extrabold.tools/schemas/common.schema.json",
  "title": "Common types",
  "type": "object",
  "$defs": {
    "mmVec3": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "x",
        "y",
        "z"
      ],
      "properties": {
        "x": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "y": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "z": {
          "type": "number",
          "exclusiveMinimum": 0
        }
      }
    },
    "mmTol3": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "x",
        "y",
        "z"
      ],
      "properties": {
        "x": {
          "type": "number",
          "minimum": 0
        },
        "y": {
          "type": "number",
          "minimum": 0
        },
        "z": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "inVec3": {
      "type": "object",
      "description": "Dimensions in inches (generated during build from mm values).",
      "additionalProperties": false,
      "required": [
        "x",
        "y",
        "z"
      ],
      "properties": {
        "x": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "y": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "z": {
          "type": "number",
          "exclusiveMinimum": 0
        }
      }
    },
    "url": {
      "type": "string",
      "format": "uri"
    },
    "isoDate": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "regionCode": {
      "type": "string",
      "description": "ISO 3166-1 alpha-2 country code. If regions is omitted, it means universal.",
      "pattern": "^[A-Z]{2}$"
    },
    "langCode": {
      "type": "string",
      "description": "BCP 47 language tag (simple validation). If langs is omitted, it means universal.",
      "pattern": "^[a-zA-Z]{2,3}(?:-[a-zA-Z0-9]{2,8})*$"
    },
    "localizedText": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 140
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "maxLength": 500
        }
      }
    },
    "i18nMap": {
      "type": "object",
      "description": "Keys are BCP 47 language tags, values are partial overrides.",
      "propertyNames": {
        "$ref": "#/$defs/langCode"
      },
      "additionalProperties": {
        "$ref": "#/$defs/localizedText"
      }
    },
    "contributorId": {
      "type": "string",
      "pattern": "^(gh|gl):[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,37}[a-zA-Z0-9])?$"
    },
    "size": {
      "type": "object",
      "description": "Physical dimensions. Always requires usable XYZ (bounding box). Can be extended with polygons or lofts.",
      "additionalProperties": false,
      "required": [
        "x",
        "y",
        "z"
      ],
      "properties": {
        "x": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "y": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "z": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "corner_radius": {
          "type": "number",
          "minimum": 0
        },
        "polygon": {
          "type": "array",
          "description": "2D outline as [x, y] or [x, y, radius] points.",
          "minItems": 3,
          "items": {
            "type": "array",
            "items": {
              "type": "number"
            },
            "minItems": 2,
            "maxItems": 3
          }
        },
        "levels": {
          "type": "array",
          "description": "Lofted shape with multiple levels.",
          "minItems": 2,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "z",
              "polygon"
            ],
            "properties": {
              "z": {
                "type": "number",
                "minimum": 0
              },
              "polygon": {
                "type": "array",
                "minItems": 3,
                "items": {
                  "type": "array",
                  "items": {
                    "type": "number"
                  },
                  "minItems": 2,
                  "maxItems": 3
                }
              }
            }
          }
        }
      }
    }
  }
}