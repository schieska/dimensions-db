{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://extrabold.tools/schemas/collection.schema.json",
    "title": "Collection",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "id",
        "kind",
        "name"
    ],
    "properties": {
        "id": {
            "type": "string",
            "pattern": "^[a-z0-9][a-z0-9_\\-\\.]*[a-z0-9]$"
        },
        "kind": {
            "type": "string",
            "enum": [
                "brand",
                "product-family",
                "system",
                "standard",
                "tag-group"
            ]
        },
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 120
        },
        "description": {
            "anyOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string",
                    "maxLength": 500
                }
            ]
        },
        "i18n": {
            "anyOf": [
                {
                    "type": "null"
                },
                {
                    "$ref": "common.schema.json#/$defs/i18nMap"
                }
            ]
        },
        "brand": {
            "anyOf": [
                {
                    "type": "string",
                    "maxLength": 80
                },
                {
                    "type": "null"
                }
            ]
        },
        "members": {
            "anyOf": [
                {
                    "type": "null"
                },
                {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "minLength": 2,
                        "maxLength": 120
                    },
                    "uniqueItems": true
                }
            ]
        },
        "collections": {
            "anyOf": [
                {
                    "type": "null"
                },
                {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "minLength": 2,
                        "maxLength": 120
                    },
                    "uniqueItems": true
                }
            ]
        },
        "rules": {
            "description": "Optional build-time rules to auto-populate members.",
            "anyOf": [
                {
                    "type": "null"
                },
                {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "brand": {
                            "anyOf": [
                                {
                                    "type": "string",
                                    "maxLength": 80
                                },
                                {
                                    "type": "null"
                                }
                            ]
                        },
                        "type_in": {
                            "anyOf": [
                                {
                                    "type": "null"
                                },
                                {
                                    "type": "array",
                                    "items": {
                                        "type": "string",
                                        "enum": [
                                            "container",
                                            "drawer",
                                            "furniture",
                                            "component",
                                            "insert",
                                            "tray"
                                        ]
                                    },
                                    "uniqueItems": true
                                }
                            ]
                        },
                        "path_prefix": {
                            "anyOf": [
                                {
                                    "type": "string",
                                    "minLength": 1
                                },
                                {
                                    "type": "null"
                                }
                            ]
                        },
                        "tag_any": {
                            "anyOf": [
                                {
                                    "type": "null"
                                },
                                {
                                    "type": "array",
                                    "items": {
                                        "type": "string",
                                        "minLength": 1,
                                        "maxLength": 40
                                    },
                                    "uniqueItems": true
                                }
                            ]
                        }
                    }
                }
            ]
        },
        "sources": {
            "anyOf": [
                {
                    "type": "null"
                },
                {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "kind",
                            "url"
                        ],
                        "properties": {
                            "kind": {
                                "type": "string",
                                "enum": [
                                    "manufacturer",
                                    "product",
                                    "manual",
                                    "datasheet",
                                    "community",
                                    "other"
                                ]
                            },
                            "url": {
                                "type": "string",
                                "format": "uri"
                            },
                            "regions": {
                                "type": "array",
                                "items": {
                                    "$ref": "common.schema.json#/$defs/regionCode"
                                },
                                "minItems": 1,
                                "uniqueItems": true
                            },
                            "langs": {
                                "type": "array",
                                "items": {
                                    "$ref": "common.schema.json#/$defs/langCode"
                                },
                                "minItems": 1,
                                "uniqueItems": true
                            }
                        }
                    }
                }
            ]
        },
        "updated_at": {
            "anyOf": [
                {
                    "$ref": "common.schema.json#/$defs/isoDate"
                },
                {
                    "type": "null"
                }
            ]
        }
    }
}